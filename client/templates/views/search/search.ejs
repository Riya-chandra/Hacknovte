<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/search/search.css">
</head>

<body>
    <div>
        <form action="/search" method="get">
            <input type="text" id="searchBox" name="query"  value="<%= searchText %> " />
            <button id="searchButton" class="btn btn-danger">Search</button>
            
        </form>
    </div>
    <div class="entries">
        <% entries.forEach(user => {%>
            <div class="card">
                <div class="cardPic">
                    <img src="<%- user.picture %>" />
                </div>
                <div class="cardContent">
                    <div class="cardName"><%= user.name %></div>
                    <div class="cardEmail"><%= user.email %></div>
                    <div>
                        <a class="recruit" href="/profile/<%= user.uid %>">View</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>